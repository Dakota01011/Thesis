#include "DataPoint.h"

void DataPoint::setPoint(int new_points[NUM_POINTS][NUM_FEATURES], int dataPointNumber)
{
	id = new_points[dataPointNumber][0];
	for (int i = 1; i < NUM_FEATURES; ++i)
	{
		int num = new_points[dataPointNumber][i];
		points.push_back(num);
	}
}

void DataPoint::clear() {
    id = -1;
    classification.clear();
    points.clear();
}
